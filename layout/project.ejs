<main class="project-detail container">
  <h1 style="text-align:center;font-size:2.3em;margin:1.2em 0 0.6em;letter-spacing:1px;"> <%= page.project.title %> </h1>
  <% if (page.project.cover) { %>
    <div style="display:flex;justify-content:center;margin-bottom:1.5em;">
      <img src="<%= page.project.cover %>" alt="<%= page.project.title %>" style="max-width:340px;border-radius:16px;box-shadow:0 4px 24px rgba(56,189,248,0.10);">
    </div>
  <% } %>
  <div style="text-align:center;margin-bottom:1.2em;">
    <% if (page.project.tech && page.project.tech.length) { %>
      <% page.project.tech.forEach(function(tech) { %>
        <span class="project-tag"><%= tech %></span>
      <% }) %>
    <% } %>
  </div>
  <div style="text-align:center;margin-bottom:1.2em;">
    <% if (page.project.demo) { %>
      <a class="project-btn" href="<%= page.project.demo %>" target="_blank">Live Demo</a>
    <% } %>
    <% if (page.project.repo) { %>
      <a class="project-btn" href="<%= page.project.repo %>" target="_blank">Source Code</a>
    <% } %>
  </div>
  <article class="project-content" style="max-width:700px;margin:0 auto 2em;font-size:1.13em;line-height:1.8;color:#333;background:#fff;border-radius:12px;padding:2em 2em 1.5em;box-shadow:0 2px 12px rgba(0,0,0,0.06);">
    <%- page.project.content %>
  </article>
</main>
<style>
.project-tag {
  display: inline-block;
  background: linear-gradient(90deg,#e0e7ff,#f0fdfa);
  color: #4f46e5;
  font-size: 0.98em;
  border-radius: 6px;
  padding: 2px 12px;
  margin: 0 6px 6px 0;
  box-shadow: 0 1px 2px rgba(79,70,229,0.08);
}
.project-btn {
  display: inline-block;
  margin: 0 0.5em 0.5em 0;
  padding: 0.5em 1.3em;
  background: linear-gradient(90deg,#6366f1,#38bdf8);
  color: #fff;
  border-radius: 6px;
  font-size: 1.05em;
  text-decoration: none;
  transition: background 0.2s;
  box-shadow: 0 2px 8px rgba(56,189,248,0.08);
}
.project-btn:hover {
  background: linear-gradient(90deg,#38bdf8,#6366f1);
}
</style> 