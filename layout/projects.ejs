<main class="project-list container">
  <h1 style="text-align:center;font-size:2.2em;margin-bottom:1.5em;">My Projects</h1>
  <div class="project-cards">
    <% if (page.projects && page.projects.length > 0) { %>
      <% page.projects.forEach(function(project) { %>
        <div class="project-card">
          <a href="<%= url_for('/project/' + project.slug + '/') %>">
            <img class="project-cover" src="<%= project.cover || '/images/default-project.png' %>" alt="<%= project.title %>" />
          </a>
          <div class="project-title"><%= project.title %></div>
          <div class="project-tech">
            <% if (project.tech && project.tech.length) { %>
              <% project.tech.forEach(function(tech) { %>
                <span class="project-tag"><%= tech %></span>
              <% }) %>
            <% } %>
          </div>
          <a class="project-detail-btn" href="<%= url_for('/project/' + project.slug + '/') %>">View Details</a>
        </div>
      <% }) %>
    <% } else { %>
      <p>No projects yet.</p>
    <% } %>
  </div>
</main>
<style>
.project-list { padding: 2em 0; }
.project-cards { display: flex; flex-wrap: wrap; gap: 2em; justify-content: center; }
.project-card {
  width: 260px;
  background: #fff;
  border-radius: 14px;
  box-shadow: 0 2px 12px rgba(0,0,0,0.08);
  overflow: hidden;
  text-align: center;
  transition: box-shadow 0.3s, transform 0.3s;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-bottom: 1.2em;
}
.project-card:hover {
  box-shadow: 0 8px 32px rgba(0,0,0,0.16);
  transform: translateY(-6px) scale(1.03);
}
.project-cover {
  width: 100%;
  height: 140px;
  object-fit: cover;
  border-radius: 14px 14px 0 0;
  box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}
.project-title {
  font-size: 1.18em;
  font-weight: bold;
  margin: 1em 0 0.5em;
  color: #222;
}
.project-tech {
  margin-bottom: 1em;
  min-height: 28px;
}
.project-tag {
  display: inline-block;
  background: linear-gradient(90deg,#e0e7ff,#f0fdfa);
  color: #4f46e5;
  font-size: 0.92em;
  border-radius: 6px;
  padding: 2px 10px;
  margin: 0 4px 4px 0;
  box-shadow: 0 1px 2px rgba(79,70,229,0.08);
}
.project-detail-btn {
  display: inline-block;
  margin-top: 0.5em;
  padding: 0.5em 1.2em;
  background: linear-gradient(90deg,#6366f1,#38bdf8);
  color: #fff;
  border-radius: 6px;
  font-size: 1em;
  text-decoration: none;
  transition: background 0.2s;
  box-shadow: 0 2px 8px rgba(56,189,248,0.08);
}
.project-detail-btn:hover {
  background: linear-gradient(90deg,#38bdf8,#6366f1);
}
</style> 